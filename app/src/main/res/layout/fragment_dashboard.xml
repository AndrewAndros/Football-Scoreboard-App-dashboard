<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/medium_green"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:id="@+id/host_team_field"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/host_team_emblem"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/football" />

        <TextView
            android:id="@+id/host_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:padding="4dp"
            android:text="HOST"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/colorWhiteDark"
            android:textSize="25sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text=":"
            android:textColor="@color/colorUsualText"
            android:textSize="80sp" />

        <TextView
            android:id="@+id/score_teamA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:layout_toStartOf="@id/divider"
            android:padding="2dp"
            android:text="0"
            android:textColor="@color/colorUsualText"
            android:textSize="88sp" />

        <TextView
            android:id="@+id/score_teamB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:layout_toEndOf="@id/divider"
            android:padding="2dp"
            android:text="0"
            android:textColor="@color/colorUsualText"
            android:textSize="88sp" />

        <ImageView
            android:id="@+id/ball"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:src="@drawable/football" />

        <TextView
            android:id="@+id/time_for_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorUsualText"
            android:background="@color/colorBlack"
            android:textSize="20sp"
            android:text="1 мин"
            android:padding="4dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp" />


        <ImageView
            android:id="@+id/leftDir"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toStartOf="@id/ball"
            android:layout_alignBottom="@+id/ball"
            android:layout_marginEnd="5dp"
            android:src="@drawable/leftdirection" />

        <ImageView
            android:id="@+id/rightDir"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/ball"
            android:layout_toEndOf="@+id/ball"
            android:layout_marginStart="5dp"
            android:src="@drawable/rightdirection" />

        <Button
            android:id="@+id/buttonPlay"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="43dp"
            android:background="@android:drawable/ic_media_play"
            android:backgroundTint="@color/colorImportantText" />

        <TextView
            android:id="@+id/timeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="time"
            android:textSize="22sp"
            android:textColor="@color/colorWhiteDark"
            android:layout_marginTop="43dp" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rival_team_field"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rival_team_emblem"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/football" />

        <TextView
            android:id="@+id/rival_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:padding="4dp"
            android:text="GUEST"
            android:textAllCaps="true"
            android:textColor="@color/colorWhiteDark"
            android:textStyle="bold"
            android:textSize="25sp" />

    </LinearLayout>

</LinearLayout>