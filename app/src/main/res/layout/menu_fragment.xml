<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/medium_green">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/football" />

    <TextView
        android:id="@+id/play_game_bn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="75dp"
        android:padding="4dp"
        android:text="играть"
        android:textAllCaps="true"
        android:textColor="@color/colorWhiteDark"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/teams_table__bn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/play_game_bn"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:layout_marginBottom="291dp"
        android:padding="4dp"
        android:text="таблица"
        android:textAllCaps="true"
        android:textColor="@color/colorWhiteDark"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/games_table__bn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teams_table__bn"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:layout_marginBottom="291dp"
        android:padding="4dp"
        android:text="результаты"
        android:textAllCaps="true"
        android:textColor="@color/colorWhiteDark"
        android:textSize="25sp"
        android:textStyle="bold" />


</RelativeLayout>